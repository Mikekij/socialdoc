<%= form_for(@doc_site) do |f| %>
  <% if @doc_site.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@doc_site.errors.count, "error") %> prohibited this doc_site from being saved:</h2>

      <ul>
      <% @doc_site.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :doc_id %><br>
    <%= f.collection_select(:doc_id, @docs, :id, :name_doctorized, prompt: true, :selected => selected(@doc)) %>

  </div>
  <div class="field">
    <%= f.label :tracked_site_id %><br>
    <%= f.collection_select(:tracked_site_id, @tracked_sites, :id, :name, prompt: true) %>

  </div>
  <div class="field">
    <%= f.label :url %><br>
    <%= f.text_field :url %>
  </div>
  <div class="field">
    <%= f.label "Google Search String" %><br>
    <%= f.text_field :data_1 %>
  </div>
  <div class="field">
    <%= f.label "Google Place ID" %> <%= link_to "(get place id)", get_place_id_path(doc_id: params[:doc_id]) %><br>
    <%= f.text_field :data_2, :value => params[:place_id] %>
  </div>
  <div class="field">
    <%= f.label :data_3 %><br>
    <%= f.text_field :data_3 %>
  </div>
  <div class="field">
    <%= f.label :data_4 %><br>
    <%= f.text_field :data_4 %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
